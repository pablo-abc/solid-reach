{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "typeRoots": ["./node_modules/@types", "../../typings"]
  },
  "include": ["./src", "../../typings"],
  "exclude": ["node_modules/"]
}
